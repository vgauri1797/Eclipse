<?import javafx.scene.layout.StackPane?>
<?import com.esri.arcgisruntime.mapping.view.MapView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.ComboBox?>
<StackPane fx:controller="com.esri.samples.raster.hillshade_renderer.HillshadeRendererController"
           xmlns:fx="http://javafx.com/fxml" stylesheets="/css/style.css">
    <MapView fx:id="mapView"/>
    <VBox StackPane.alignment="TOP_LEFT" maxWidth="250" maxHeight="50" styleClass="panel-region">
        <GridPane hgap="10" vgap="10">
            <Label text="Slope Type:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <ComboBox fx:id="slopeTypeComboBox" onAction="#updateRenderer" GridPane.rowIndex="0"
                      GridPane.columnIndex="1"/>
            <Label text="Azimuth:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <Slider fx:id="azimuthSlider" max="360.0" showTickLabels="true"
                    majorTickUnit="60.0" value="315.0" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
            <Label text="Altitude:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <Slider fx:id="altitudeSlider" max="45.0" value="30.0" showTickLabels="true"
                    majorTickUnit="15.0" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
        </GridPane>
    </VBox>
</StackPane>
