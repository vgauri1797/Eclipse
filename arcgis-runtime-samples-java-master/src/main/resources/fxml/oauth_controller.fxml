<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<StackPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.esri.samples.portal.oauth.OAuthController"
           stylesheets="/css/style.css">
    <VBox spacing="10" maxWidth="300" StackPane.alignment="TOP_LEFT">
        <padding><Insets left="20" top="20"/></padding>
        <VBox>
            <Label text="Full Name" style="-fx-font-weight: bold"/>
            <Label fx:id="fullName"/>
        </VBox>
        <VBox>
            <Label text="Username" style="-fx-font-weight: bold"/>
            <Label fx:id="username"/>
        </VBox>
        <VBox>
            <Label text="Email" style="-fx-font-weight: bold"/>
            <Label fx:id="email"/>
        </VBox>
        <VBox>
            <Label text="Member Since" style="-fx-font-weight: bold"/>
            <Label fx:id="memberSince"/>
        </VBox>
        <VBox>
            <Label text="Role" style="-fx-font-weight: bold"/>
            <Label fx:id="role"/>
        </VBox>
    </VBox>
</StackPane>
